					private void createJButtonActionPerformed(ActionEvent event) 
					{
						String gg = newPasswordJPasswordField.getText();
						String ggg = retypeNewPasswordJPasswordField.getText();
						
						String name = nameJTextField.getText();
						String email = emailJTextField.getText();
						String phone = phoneJTextField.getText();
						String address = addressJTextField.getText();
						String balance = startBalanceJTextField.getText();
						
					
						
						
										
						int gg1 = gg.length();
					
						if(gg1 > 15) 
						{
							  
								int x = JOptionPane.showConfirmDialog(null, 
			            				" The password should be 15 characters or less! "
										, " ERROR ", JOptionPane.YES_OPTION);
			         		
			         		//System.out.print(x);
			         		
			         		if(x == 1)
			         		{
			         			
			         			//Means NO
			         			System.out.print("NO");
			         		}
			         		
			         		else if(x == 2)
			         		{
			         			
			         			//Means Cancel
			         			System.out.print("Cancel");
			         		}
			         		else 
			         		{if(name == "Click to Type in your name")
							{
								l1.setVisible(true);
								System.out.print(name);
							}
								if(nameJTextField.getText() == "Email Address")
								{
									l2.setVisible(true);
								}
									if(phone == "Phone Number")
									{
										l3.setVisible(true);
									}
										if(address == "Mailing Address")
										{
											l4.setVisible(true);
										}
											if(balance == "Retype your Password")
											{
												l5.setVisible(true);
											}
												if(balance == "Enter a starting Balance")
												{
													l6.setVisible(true);
												}
			         		
			         			
			         			//Means Yes
			         			System.out.print("Yes");
			         			if(gg != ggg)
								{

									   JOptionPane.showMessageDialog(null, "The password you typed is not the same!","ERROR",

									    	   JOptionPane.ERROR_MESSAGE);
									
									
								}
			         			else
			         			{
			         				setVisible(false);
			         			}
			         		}
						}
						else
						{
							setVisible(false);
						}
						/////////////////////check if the user type in sufficient info///////////////////
				
					
						
					
					
					
					
					
					}
	    				  
					
					}	  
