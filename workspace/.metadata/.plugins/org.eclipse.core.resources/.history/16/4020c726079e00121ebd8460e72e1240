	         		}
	         		
	         		else if(x == 2)
	         		{
	         			
	         			//Means Cancel
	         			System.out.print("Cancel");
	         		}
	         		else 
	         		{
	         		
	         			
	         			//Means Yes
	         			System.out.print("Yes");
	         		}
	            	 
						
					}
	    				  
	    		  }
	    		  
	    			  
